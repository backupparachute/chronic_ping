var parseField = function(input_field) {
  $.ajax({
    type: "POST",
    url: "<%= ENV['RAILS_RELATIVE_URL_ROOT'].to_s.gsub(/\/$/, '') %>/chronic_ping/parse",
    data: { q: input_field.value, f: $(input_field).data('format'), c: $(input_field).data('context') },
    dataType: "json"
  }).done(function( msg ) {
    input_field.value = msg.response;
  });
}

$(document).ready(function() {
  $('.chronic_ping').change(function() {
    parseField(this);
  });

  $('.chronic_ping').keydown(function(e) {
    if (e.keyCode == 13) {
      parseField(this);
      e.preventDefault();
      e.stopPropagation();
    }
  });
});
