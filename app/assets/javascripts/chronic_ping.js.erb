$('.chronic_ping').focusout(function() {
  input_field = this
  $.ajax({
    type: "POST",
    url: "<%= ENV['RAILS_RELATIVE_URL_ROOT'] %>/chronic_ping/parse",
    data: { q: this.value, f: $(this).data('format') },
    dataType: "json"
  }).done(function( msg ) {
    input_field.value = msg.response;
  });
});
